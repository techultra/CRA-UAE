<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_goods_receipt">
            <t t-set="company" t-value="env.company"/>
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout_standard">
                        <div class="page">
                            <h2 class="text-right">
                                GOODS RECEIPT NOTE
                            </h2>
                        </div>
                        <br></br>
                        <style>
                            .custom-table th, .custom-table td {
                            border:2px solid #000;
                            }
                            .sale-order-head{
                            width:100%;
                            }
                            .sale-order-head td:nth-child(even) {
                            padding-left: 3%;
                            }
                        </style>
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <table class="sale-order-head" width="100%">
                                        <tbody>
                                            <tr>
                                                <td>Party</td>
                                                <td><b><t t-if="o.partner_id.name">
                                                    <span t-esc="o.partner_id.name"/>
                                                </t>
                                                    <t t-if="o.partner_id.street">
                                                        <span t-esc="o.partner_id.street"/>
                                                    </t>
                                                    <t t-if="o.partner_id.street2">
                                                        <span t-esc="o.partner_id.street2"/>
                                                    </t>
                                                    <t t-if="o.partner_id.city">
                                                        <span t-esc="o.partner_id.city"/>
                                                    </t>
                                                    <t t-if="o.partner_id.country_id">
                                                        <span t-esc="o.partner_id.country_id.name"/>
                                                    </t>
                                                </b></td>
                                                <td>GRN No</td>
                                                <td><strong><span t-esc="o.name"/></strong></td>
                                            </tr>
                                            <tr>
                                                <td>Tel</td>
                                                <td><strong><span t-esc="o.partner_id.phone"/></strong></td>
                                                <td>GRN Date</td>
                                                <td><strong><span t-esc="o.date"/></strong></td>
                                            </tr>
                                            <tr>
                                                <td>Fax</td>
                                                <td></td>
                                                <td>Supp.DO No.</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>TRN</td>
                                                <td></td>
                                                <td>Supp.DO Date</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br></br>
                                    <br></br>
                                    <table class="table custom-table" style="width:100%" border="2">
                                        <thead class="table-active">
                                            <tr>
                                                <th>BL/AWB Number</th>
                                                <th>BL/AWB Date</th>
                                                <th>Container Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br></br>
                                    <br></br>
                                    <table class="table custom-table" style="width:100%" border="2">
                                        <thead class="table-active">
                                            <tr>
                                                <th>SN</th>
                                                <th>Description</th>
                                                <th>UOM</th>
                                                <th>Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="counter" t-value="0"/>
                                            <t t-foreach="o.move_ids_without_package" t-as="orderline">
                                                <t t-set="counter" t-value="counter + 1"/>
                                                <tr>
                                                    <td>
                                                        <span t-esc="counter"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.product_id.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.product_id.uom_name"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.product_uom_qty"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td colspan="3">
                                                    Total
                                                </td>
                                                <td colspan="4">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <div class="row mt32 mb32">
                                        <div class="col-12 text-right" style="">
                                            <h4>
                                                <b>For CRA Trading LLC</b>
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="row mt32 mb32" style="margin-top:5px;">
                                        <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                            <span>Prepared by</span>
                                            <div class="row">
                                                <div class="col-12" style="font-size:18;text-align:left;">
                                                    <span>ALBIN</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4 text-left"
                                             style="font-size:18px;border-top:1px solid;border-bottom:1px solid;">
                                            <div class="row">
                                                <div class="col-12"
                                                     style="margin-top:14px;font-size:18;text-align:left;">
                                                    <span>Checked by</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12"
                                                     style="margin-bottom:7px;font-size:18;text-align:left;">
                                                    <span>SHAHBAAZ</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                            <span>Authorized by</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>