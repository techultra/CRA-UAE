<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_body_sale_delivery_notes" inherit_id="stock.report_delivery_document">
            <!--            <xpath expr='//t[2]' position='replace'/>-->
            <xpath expr='//t[3]' position='replace'/>
            <xpath expr='//div[@class="page"]' position='replace'>
                <div class="page">
                    <h2 class="text-right">
                        DELIVERY NOTE
                    </h2>
                    <br></br>
                    <style>
                        .custom-table th, .custom-table td {
                        border:2px solid #000;
                        }
                        .sale-order-head{
                        width:100%;
                        }
                        .sale-order-head td:nth-child(even) {
                        padding-left: 3%;
                        }
                    </style>
                    <div class="container">
                        <div class="row">
                            <div>
                                <table class="sale-order-head">
                                    <tbody>
                                        <tr>
                                            <td>Party</td>
                                            <td><b><t t-if="o.partner_id.name">
                                                <span t-esc="o.partner_id.name"/>
                                            </t>
                                            </b></td>
                                            <td>DO No</td>
                                            <td><strong><span t-esc="o.name"/></strong></td>
                                        </tr>
                                        <tr>
                                            <td>Address</td>
                                            <td><b>
                                                <t t-if="o.partner_id.street">
                                                    <span t-esc="o.partner_id.street"/>
                                                </t>
                                                <t t-if="o.partner_id.street2">
                                                    <span t-esc="o.partner_id.street2"/>
                                                </t>
                                                <t t-if="o.partner_id.city">
                                                    <span t-esc="o.partner_id.city"/>
                                                </t>
                                                <t t-if="o.partner_id.country_id">
                                                    <span t-esc="o.partner_id.country_id.name"/>
                                                </t>
                                            </b></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>Tel</td>
                                            <td><strong><span t-esc="o.partner_id.phone"/></strong></td>
                                            <td>DO Date</td>
                                            <td><strong><span t-esc="o.scheduled_date"/></strong></td>
                                        </tr>
                                        <tr>
                                            <td>Fax</td>
                                            <td></td>
                                            <td>SONo</td>
                                            <td><strong><span t-esc="o.name"/></strong></td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td><strong><span t-esc="o.partner_id.email"></span></strong></td>
                                            <td>Cust. LPO#</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>TRN</td>
                                            <td></td>
                                            <td>Cust. LPO Date</td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br></br>
                <br></br>
                <table class="custom-table" style="width:100%" border="2">
                    <thead class="table-active">
                        <tr>
                            <th>SI#</th>
                            <th>Ref No</th>
                            <th>Description</th>
                            <th>Unite</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                                        <tbody>
                        <t t-set="counter" t-value="0"/>
                        <t t-foreach="o.move_ids_without_package" t-as="move_ids">
                            <t t-set="counter" t-value="counter + 1"/>
                            <tr>
                                <td>
                                    <span t-esc="counter"/>
                                </td>
                                <td>
                                    <span t-esc="o.origin"/>
                                </td>
                                <td>
                                    <span t-esc="move_ids.product_id.name"/>
                                </td>
                                <td>
                                    <span t-esc="move_ids.product_uom_qty"/>
                                </td>
                                <td>
                                    <span t-esc="move_ids.reserved_availability "/>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="1">
<!--                                <span t-esc="doc.digit_to_words()"/>-->
                            </td>
                            <td colspan="1">
                            </td>
                            <td colspan="1">
                               <b>Total Quantity</b>
                            </td>
                            <td colspan="1">
<!--                                <span t-esc="sum(move_ids.mapped('reserved_availability'))"/>-->
                            </td>
                            <td colspan="1">
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <div class="row mt32 mb32">
                    <div class="col-12 text-right" style="">
                        <h4>
                            <b>For CRA Trading LLC</b>
                        </h4>
                    </div>
                </div>
                <div class="row mt32 mb32" style="margin-top:5px;">
                    <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                        <span>Received by</span>
                        <div class="row">
                            <div class="col-5 text-left" style="height:20;font-size:16px;border-top:1px solid;">
                                <span>Signature</span>
                            </div>
                            <div class="col-7 text-left"
                                 style="font-size:16px;border-top:1px solid;border-left:1px solid;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left" style="height:20;font-size:16px;border-top:1px solid;">
                                <span>Name</span>
                            </div>
                            <div class="col-7 text-left"
                                 style="font-size:16px;border-top:1px solid;border-left:1px solid;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left" style="height:20;font-size:16px;border-top:1px solid;">
                                <span>Date &amp; Time</span>
                            </div>
                            <div class="col-7 text-left"
                                 style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left" style="height:20;font-size:16px;border-top:1px solid;">
                                <span>Mobile No.</span>
                            </div>
                            <div class="col-7 text-left"
                                 style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left" style="height:20;font-size:16px;border-top:1px solid;">
                                <span>EID No.</span>
                            </div>
                            <div class="col-7 text-left"
                                 style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-left"
                         style="font-size:18px;border-top:1px solid;border-bottom:1px solid;">
                        <span>Prepared by</span>
                        <div class="row">
                            <div class="col-12" style="font-size:18;text-align:left;">
                                <span>ALBIN</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12" style="margin-top:14px;font-size:18;text-align:left;">
                                <span>Checked by</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12" style="margin-bottom:7px;font-size:18;text-align:left;">
                                <span>SHAHBAAZ</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                        <span>Authorized by</span>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
