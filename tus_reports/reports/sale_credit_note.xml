<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_debit_note">
            <t t-set="company" t-value="env.company"/>
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout_standard">
                        <div class="page">
                            <h2 class="text-right">
                                TAX CREDIT NOTE
                            </h2>
                        </div>
                        <style>
                            .custom-table th, .custom-table td {
                            border:2px solid #000;
                            }
                            .sale-order-head{
                            width:100%;
                            }
                            .sale-order-head td:nth-child(even) {
                            padding-left: 3%;
                            }
                        </style>
                        <br></br>
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <table class="sale-order-head" width="100%">
                                        <tbody>
                                            <tr>
                                                <td>Party</td>
                                                <td><b><t t-if="o.partner_id.name">
                                                    <span t-esc="o.partner_id.name"/>
                                                </t>
                                                </b></td>
                                                <td>SR No</td>
                                                <td><strong><span t-esc="o.name"/></strong></td>
                                            </tr>
                                            <tr>
                                                <td>Address</td>
                                                <td><b>
                                                    <t t-if="o.partner_id.street">
                                                        <span t-esc="o.partner_id.street"/>
                                                    </t>
                                                    <t t-if="o.partner_id.street2">
                                                        <span t-esc="o.partner_id.street2"/>
                                                    </t>
                                                    <t t-if="o.partner_id.city">
                                                        <span t-esc="o.partner_id.city"/>
                                                    </t>
                                                    <t t-if="o.partner_id.country_id">
                                                        <span t-esc="o.partner_id.country_id.name"/>
                                                    </t>
                                                </b></td>
                                                <td>SR Date</td>
                                                <td><strong><span t-esc="o.invoice_date"/></strong></td>
                                            </tr>
                                            <tr>
                                                <td>Tel</td>
                                                <td><strong><span t-esc="o.partner_id.phone"/></strong></td>
                                                <td>Payment Terms</td>
                                                <td><strong><span t-esc="o.invoice_payment_term_id.name"/></strong></td>
                                            </tr>
                                            <tr>
                                                <td>Fax</td>
                                                <td></td>
                                                <td>SI No</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><strong><span t-esc="o.partner_id.email"></span></strong></td>
                                                <td>Cust. LPO#</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>TRN</td>
                                                <td></td>
                                                <td>Cust. LPO Date</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br></br>
                                    <br></br>
                                    <table class="table custom-table" style="width:100%" border="2">
                                        <thead class="table-active">
                                            <tr>
                                                <th>SI#</th>
                                                <th>Ref No</th>
                                                <th>Quantity</th>
                                                <th>Unit</th>
                                                <th>AED Rate</th>
                                                <th>VAT%</th>
                                                <th>AED VAT</th>
                                                <th>AED Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="counter" t-value="0"/>
                                            <t t-foreach="o.invoice_line_ids" t-as="orderline">
                                                <t t-set="counter" t-value="counter + 1"/>
                                                <tr>
                                                    <td>
                                                        <span t-esc="counter"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.ref"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.quantity"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.product_id.uom_name"/>
                                                    </td>
                                                    <td>
                                                        <!--                                                <span t-esc="orderline.price_unit"/>-->
                                                    </td>
                                                    <td>
                                                        <span t-esc="orderline.tax_ids.mapped('name')"/>
                                                    </td>
                                                    <td></td>
                                                    <td>
                                                        <span t-esc="orderline.price_subtotal"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td colspan="3" rowspan="3">
                                                    <span t-esc="o.digit_to_words()"/>
                                                </td>
                                                <td colspan="3">
                                                    Gross Total
                                                </td>
                                                <td></td>
                                                <td colspan="1">
                                                    <span t-esc="o.amount_untaxed"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                    VAT Amount
                                                </td>
                                                <td></td>
                                                <td colspan="1">
                                                    <!--                                            <span t-esc="doc.amount_total"/>-->
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                    AED Net Total
                                                </td>
                                                <td></td>
                                                <td colspan="1">
                                                    <!--                                            <span t-esc="doc.amount_total"/>-->
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <div class="row mt32 mb32">
                                        <div class="col-12 text-right" style="">
                                            <h4>
                                                <b>For CRA Trading LLC</b>
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="row mt32 mb32" style="margin-top:5px;">
                                        <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                            <span>Received by</span>
                                            <div class="row">
                                                <div class="col-5 text-left"
                                                     style="height:20;font-size:16px;border-top:1px solid;">
                                                    <span>Signature</span>
                                                </div>
                                                <div class="col-7 text-left"
                                                     style="font-size:16px;border-top:1px solid;border-left:1px solid;">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-5 text-left"
                                                     style="height:20;font-size:16px;border-top:1px solid;">
                                                    <span>Name</span>
                                                </div>
                                                <div class="col-7 text-left"
                                                     style="font-size:16px;border-top:1px solid;border-left:1px solid;">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-5 text-left"
                                                     style="height:20;font-size:16px;border-top:1px solid;">
                                                    <span>Date &amp; Time</span>
                                                </div>
                                                <div class="col-7 text-left"
                                                     style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-5 text-left"
                                                     style="height:20;font-size:16px;border-top:1px solid;">
                                                    <span>Mobile No.</span>
                                                </div>
                                                <div class="col-7 text-left"
                                                     style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-5 text-left"
                                                     style="height:20;font-size:16px;border-top:1px solid;">
                                                    <span>EID No.</span>
                                                </div>
                                                <div class="col-7 text-left"
                                                     style="font-size:16px;border-top:1px solid;border-left:1px solid;">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4 text-left"
                                             style="font-size:18px;border-top:1px solid;border-bottom:1px solid;">
                                            <span>Prepared by</span>
                                            <div class="row">
                                                <div class="col-12" style="font-size:18;text-align:left;">
                                                    <span>ALBIN</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12"
                                                     style="margin-top:14px;font-size:18;text-align:left;">
                                                    <span>Checked by</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12"
                                                     style="margin-bottom:7px;font-size:18;text-align:left;">
                                                    <span>ASHOK</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                            <span>Authorized by</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>