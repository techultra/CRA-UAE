<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="custom_header_all" inherit_id="web.external_layout_standard">

            <!-- Header Part -->

            <xpath expr="//div[hasclass('row')][1]" position="replace"></xpath>
            <xpath expr="//div[hasclass('row')][2]" position="replace"></xpath>

            <xpath expr="//div[1][hasclass('row')]" position="replace">
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                             style="max-height: 50px;"/>
                    </div>
                    <div class="col-6 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <div style="font-size:24px">
                            <span t-field="company.partner_id.street"/>
                        </div>
                        <div style="font-size:15px">
                            <span t-field="company.partner_id.street2"/>
                            <br/>
                            Tel:
                            <span t-field="company.partner_id.phone"/>
                            <br/>
                            Email:
                            <span t-field="company.partner_id.email"/>
                            <t/>
                            <t/>
                            <span t-field="company.partner_id.website"/>
                            <br/>
                        </div>
                    </div>
                </div>
            </xpath>

            <!--  footer part -->

            <xpath expr="//div[hasclass('text-center')]" position="replace">
                <div class="row mt32 mb32">
                    <div class="col-6 text-left" style="font:12px lucida-console,sans-serif !important;">
                        <b>Printed by user</b>
                        <span/>
                        <br/>
                        <b>Printed on</b>
                        <span/>
                    </div>
                    <div class="col-6 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <b>Printed at machine:</b>
                        <span/>,
                        <b>Using FactERP</b>
                        <span/>
                        <br/>
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </xpath>
        </template>

    </data>
</odoo>
