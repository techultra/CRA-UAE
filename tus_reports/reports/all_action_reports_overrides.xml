<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  override Sale report action -->
        <report
                id="sale.action_report_saleorder"
                string="Quotation / Order"
                model="sale.order"
                report_type="qweb-pdf"
                file="sale.report_saleorder"
                name="sale.report_saleorder"
                print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
                paperformat="paper_format_report_tus"
        />

        <report
                id="sale_tax_invoice"
                string="Tax Invoice"
                model="sale.order"
                report_type="qweb-pdf"
                name="tus_reports.report_tax_invoice"
                file="tus_reports.report_tax_invoice"
                paperformat="tus_reports.paper_format_report_tus"
        />

        <!--  override Sale Delivery Slip report action -->
        <report
                string="Delivery Note"
                id="stock.action_report_delivery"
                model="stock.picking"
                report_type="qweb-pdf"
                name="stock.report_deliveryslip"
                file="stock.report_deliveryslip"
                print_report_name="'Delivery Slip - %s - %s' % (object.partner_id.name or '', object.name)"
                paperformat="paper_format_report_tus"
        />

        <!--  override Picking Slip report action -->

        <report
                string="Picking Operations"
                id="stock.action_report_picking"
                model="stock.picking"
                report_type="qweb-pdf"
                name="stock.report_picking"
                file="stock.report_picking_operations"
                print_report_name="'Picking Operations - %s - %s' % (object.partner_id.name or '', object.name)"
                paperformat="paper_format_report_tus"
        />

        <!--  override Invoice Slip report action -->

        <report
                id="account.account_invoices"
                model="account.move"
                string="Invoices"
                report_type="qweb-pdf"
                name="account.report_invoice_with_payments"
                file="account.report_invoice_with_payments"
                attachment="(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')"
                print_report_name="(object._get_report_base_filename())"
                groups="account.group_account_invoice"
                paperformat="paper_format_report_tus"
        />

        <report
                string="Purchase Order"
                id="purchase.action_report_purchase_order"
                model="purchase.order"
                report_type="qweb-pdf"
                name="purchase.report_purchaseorder"
                file="purchase.report_purchaseorder"
                print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
                paperformat="paper_format_report_tus"
        />

        <report
                id="tax_purchase_debit_note"
                model="account.move"
                string="Tax Purchase Debit Note"
                report_type="qweb-pdf"
                name="tus_reports.report_purchase_debit_note"
                file="tus_reports.report_purchase_debit_note"
                paperformat="tus_reports.paper_format_report_tus"
        />

        <report
                id="debit_note"
                model="account.move"
                string="Tax Debit Note"
                report_type="qweb-pdf"
                name="tus_reports.report_debit_note"
                file="tus_reports.report_debit_note"
                paperformat="tus_reports.paper_format_report_tus"
        />

        <report
                id="tax_purchase_invoice"
                model="purchase.order"
                string="Tax Purchase Invoice"
                report_type="qweb-pdf"
                name="tus_reports.report_purchase_tax_invoice"
                file="tus_reports.report_purchase_tax_invoice"
                paperformat="tus_reports.paper_format_report_tus"
        />

        <report
                id="pre_forma_invoice"
                model="account.move"
                string="Pre-Forma Invoice"
                report_type="qweb-pdf"
                name="tus_reports.report_pre_forma_invoice"
                file="tus_reports.report_pre_forma_invoice"
                paperformat="tus_reports.paper_format_report_tus"
        />

        <report
                string="Goods Receipt Note"
                id="report_goods_receipt_note"
                model="stock.picking"
                report_type="qweb-pdf"
                name="tus_reports.report_goods_receipt"
                file="tus_reports.purchase_goods_receipt"
                paperformat="tus_reports.paper_format_report_tus"
        />
    </data>
</odoo>
