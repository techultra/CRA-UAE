<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_purchase_order" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr='//t[2]' position='replace'/>
            <xpath expr='//t[3]' position='replace'/>
            <xpath expr='//div[@class="page"]' position='replace'>
                <div class="page">
                    <h2 class="text-right">
                        PURCHASE ORDER
                    </h2>
                </div>
                <br></br>
                <style>
                    .custom-table th, .custom-table td {
                    border:2px solid #000;
                    }
                    .sale-order-head{
                    width:100%;
                    }
                    .sale-order-head td:nth-child(even) {
                    padding-left: 3%;
                    }
                </style>
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <table class="sale-order-head" width="100%">
                                <tbody>
                                    <tr>
                                        <td>Party</td>
                                        <td><b><t t-if="o.partner_id.name">
                                            <span t-esc="o.partner_id.name"/>
                                        </t>
                                        </b></td>
                                        <td>PO No</td>
                                        <td><strong><span t-esc="o.name"/></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <td><b>
                                            <t t-if="o.partner_id.street">
                                                <span t-esc="o.partner_id.street"/>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                <span t-esc="o.partner_id.street2"/>
                                            </t>
                                            <t t-if="o.partner_id.city">
                                                <span t-esc="o.partner_id.city"/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                <span t-esc="o.partner_id.country_id.name"/>
                                            </t>
                                        </b></td>
                                        <td>PO Date</td>
                                        <td><strong><span t-esc="o.date_order"/></strong></td>
                                    </tr>
                                    <tr>
                                        <td>Tel</td>
                                        <td><strong><span t-esc="o.partner_id.phone"/></strong></td>
                                        <td>Payment Terms</td>
                                        <td><strong><span
                                                t-esc="o.partner_id.property_payment_term_id.name"/></strong></td>
                                    </tr>
                                    <tr>
                                        <td>TRN</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                            <br></br>
                            <table class="table custom-table" style="width:100%" border="2">
                                <thead class="table-active">
                                    <tr>
                                        <th>SI#</th>
                                        <th>Ref No</th>
                                        <th>Description</th>
                                        <th>Quantity</th>
                                        <th>UOM</th>
                                        <th>AED Rate</th>
                                        <th>AED Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="0"/>
                                    <t t-foreach="o.order_line" t-as="orderline">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <tr>
                                            <td>
                                                <span t-esc="counter"/>
                                            </td>
                                            <td>
                                                <span t-esc="orderline.product_id.default_code"/>
                                            </td>
                                            <td>
                                                <span t-esc="orderline.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="orderline.product_qty"/>
                                            </td>
                                            <td>
                                                <span t-esc="orderline.product_id.uom_name"/>
                                            </td>
                                            <td>

                                            </td>
                                            <td></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="3" rowspan="3">
                                            <span t-esc="o.digit_to_words()"/>
                                        </td>
                                        <td colspan="3">
                                            Gross Total
                                        </td>
                                        <td colspan="1">
                                            <span t-esc="o.amount_untaxed"/>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            VAT Amount
                                        </td>
                                        <td colspan="1">
                                            <!--                                            <span t-esc="doc.amount_total"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            AED Net Total
                                        </td>
                                        <td colspan="1">
                                            <!--                                            <span t-esc="doc.amount_total"/>-->
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <div class="row mt32 mb32">
                                <div class="col-12 text-right" style="">
                                    <h4>
                                        <b>For CRA Trading LLC</b>
                                    </h4>
                                </div>
                            </div>
                            <div class="row mt32 mb32" style="margin-top:5px;">
                                <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                    <span>Prepared by</span>
                                    <div class="row">
                                        <div class="col-12" style="font-size:18;text-align:left;">
                                            <span>ALBIN</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-left"
                                     style="font-size:18px;border-top:1px solid;border-bottom:1px solid;">
                                    <div class="row">
                                        <div class="col-12" style="margin-top:14px;font-size:18;text-align:left;">
                                            <span>Checked by</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12" style="margin-bottom:7px;font-size:18;text-align:left;">
                                            <span>SHAHBAAZ</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-left" style="font-size:18px;border:1px solid;">
                                    <span>Authorized by</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>